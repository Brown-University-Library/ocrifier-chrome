{
  "manifest_version": 2,

  "name": "BUL Ocrifier for Chrome",
  "description": "Reserve course materials from anywhere.",
  "version": "0.9",

  "homepage_url": "https://library.brown.edu/reserves",

  "browser_action": {
    "default_icon": {                    
            "19": "ocra_extension19.png",
            "38": "ocra_extension_38.png"
    },     
    "default_popup": "popup.html",
    "default_title": "Add items from this page to your OCRA course reserves."
  },
  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["https://search.library.brown.edu/catalog/b*"],
      "js": ["config.js", "josiahlink.js"]
    }
  ]
}
